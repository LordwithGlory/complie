<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="2dp" >

    <ImageView
        android:id="@id/item_message_head"
        style="@style/Image.Head"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/item_message_head"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@id/item_message_user"
                style="@style/Text.Name"
                android:layout_alignParentLeft="true"
                android:text="UserName"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@id/item_message_text"
            style="@style/Text.Status" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@id/item_message_date"
                style="@style/Text.Meta"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>