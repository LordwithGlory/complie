<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<ScrollView android:id="@+id/scroller"
		android:layout_marginTop="10dp" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/pop"
		android:fadingEdgeLength="5dp" android:scrollbars="none">

		<LinearLayout android:id="@+id/tracks"
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:padding="4dp" />

	</ScrollView>

	<ImageView android:id="@+id/arrow_up" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignTop="@id/scroller"
		android:layout_marginTop="-5dp" android:src="@drawable/up" />

	<ImageView android:id="@+id/arrow_down" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@id/scroller"
		android:layout_marginTop="-4dp" android:src="@drawable/down" />

</RelativeLayout>