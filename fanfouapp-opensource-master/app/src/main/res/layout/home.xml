<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <com.fanfou.app.opensource.ui.ActionBar
        android:id="@id/actionbar"
        style="@style/ActionBar" />

    <com.fanfou.app.opensource.ui.viewpager.TitlePageIndicator
        android:id="@+id/viewindicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_page_indicator_bg"
        app:footerColor="@color/sky_blue"
        app:footerIndicatorHeight="2dp"
        app:footerIndicatorStyle="underline"
        app:footerLineHeight="0dp"
        app:selectedBold="false"
        app:selectedColor="#FF333333"
        app:textColor="#FF999999"
        app:textSize="12sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>